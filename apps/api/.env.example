# Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/pulso_db

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRES_IN=7d

# Encryption (AES-256 requires 32 bytes = 64 hex chars)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Mercado Pago
MP_CLIENT_ID=your_mercadopago_app_id
MP_CLIENT_SECRET=your_mercadopago_app_secret
MP_REDIRECT_URI=http://localhost:5173/callback/mercadopago

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Redis
REDIS_URL=redis://localhost:6379

# Sentry (optional)
SENTRY_DSN=

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
